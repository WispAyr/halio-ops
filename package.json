{
  "name": "halio-ops",
  "version": "1.0.0",
  "description": "Halio operations toolkit for running AI inference pipelines on RTSP streams with the Halio AI HAT.",
  "main": "src/server.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "prestart": "node scripts/free-port.js",
    "start": "node src/server.js",
    "dev": "PORT=${PORT:-3000} nodemon --watch src --ext js,json --exec \"node src/server.js\"",
    "test": "jest --runInBand",
    "build:ui": "npx tailwindcss -i ui/dashboard/styles/tailwind.css -o ui/dashboard/styles/output.css --minify",
    "watch:ui": "npx tailwindcss -i ui/dashboard/styles/tailwind.css -o ui/dashboard/styles/output.css --watch"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chokidar": "^4.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "execa": "^9.6.0",
    "express": "^5.1.0",
    "multer": "^2.0.2",
    "node-onvif": "^0.1.7",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "autoprefixer": "^10.4.22",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "postcss": "^8.5.6",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.17"
  }
}
